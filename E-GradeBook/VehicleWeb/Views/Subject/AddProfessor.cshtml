@{
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-danger">
        @successMessage
    </div>
}
<h1>Create</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddProfessor">
            <input type="hidden" value="@Model.SubjectId" asp-for="@Model.SubjectId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="ProfessorId" class="control-label"></label>
                @Html.DropDownListFor(x => Model.ProfessorId, new SelectList(Model.professors, "Id", "Email"), new { @class = "form-control" })
                <span asp-validation-for="ProfessorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.SubjectId">Back to list</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}